<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kitapp.hska.de.kitapp.KitaDetailsActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/selected"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/gallery_relative_layout"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="30dip"

                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/gallery_relative_layout"
                android:layout_marginTop="200dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/gallery_relative_layout"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <HorizontalScrollView
                    android:id="@+id/hor_scroll_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <LinearLayout
                        android:id="@+id/gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:onClick="biggerView"
                            android:src="@drawable/im1" />

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:onClick="biggerView"
                            android:src="@drawable/im2" />

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:onClick="biggerView"
                            android:src="@drawable/im3" />

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:onClick="biggerView"
                            android:src="@drawable/im4" />

                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <TextView
                android:id="@+id/KitaDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="@string/kitaDetailsKitaName" />


            <TextView
                android:id="@+id/KitaDetailsAddressData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:lines="4"
                android:maxLines="4"
                android:text="@string/kitaDetailsAddressData" />


            <TextView
                android:id="@+id/KitaDetailsEvaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:text="@string/kitaDetailsEvaluation" />

            <RatingBar
                android:id="@+id/KitaDetailsRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4" />

            <Button
                android:id="@+id/KitaDetailsButtonNews"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:text="News " />

            <TextView
                android:id="@+id/KitaDetailsCosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:text="@string/kitaDetailsCosts" />

            <TextView
                android:id="@+id/KitaDetailsCostsData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="@string/kitaDetailsCostsData" />

            <TextView
                android:id="@+id/KitaDetailsOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:text="@string/kitaDetailsOpen" />

            <TextView
                android:id="@+id/KitaDetailsOpenhours"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:lines="5"
                android:maxLines="5"
                android:text="@string/kitaDetailsOpenData" />

            <TextView
                android:id="@+id/KitaDetailsManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:text="@string/kitaDetailsManagement" />

            <TextView
                android:id="@+id/KitaDetailsManagementData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="@string/kitaDetailsManagementData" />

            <TextView
                android:id="@+id/KitaDetailsConfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:text="@string/kitaDetailsConfession" />

            <TextView
                android:id="@+id/KitaDetailsConfessionData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="@string/kitaDetailsConfessionData" />

            <TextView
                android:id="@+id/KitaDetailsAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:text="@string/kitaDetailsAge" />

            <TextView
                android:id="@+id/KitaDetailsAgeData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="@string/kitaDetailsAgeData" />

            <TextView
                android:id="@+id/KitaDetailsAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:text="@string/kitaDetailsAbout" />

            <TextView
                android:id="@+id/KitaDetailsAboutData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="@string/kitaDetailsAboutData" />

            <TextView
                android:id="@+id/KitaDetailsComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:text="@string/kitaDetailsComments" />

            <ListView
                android:id="@+id/KitaDetailsListComments"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </ListView>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
