<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    style="@style/FontBGColor.White">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/result.imageview.thumbnail"
            style="@style/FontBGColor.White"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/im1" />

        <TextView
            android:id="@+id/result.textview.circuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/secondary_text_default_material_dark"
            android:text="@string/placeHolderString"
            android:autoText="false"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/result.ratingbar.rating" />

        <TextView
            android:id="@+id/result.textview.name"
            style="@style/header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/result.textview.city"
            android:background="@color/secondary_text_default_material_dark"
            android:text="@string/placeHolderString" />

        <TextView
            android:id="@+id/result.textview.city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/secondary_text_default_material_dark"
            android:text="@string/placeHolderString"
            />

        <RatingBar
            android:id="@+id/result.ratingbar.rating"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5" />

    </RelativeLayout>

    <LinearLayout
        style="@style/FontBGColor.White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#91d187">

        <ImageButton
            android:id="@+id/result.imagebutton.tel"
            style="@style/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_call_black_48dp"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/result.imagebutton.email"
            style="@style/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_email_black_48dp"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/result.imagebutton.fav"
            style="@style/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_favorite_border_black_48dp"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/result.imagebutton.cont"
            style="@style/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_person_add_black_48dp"
            android:background="#00000000"/>
    </LinearLayout>
</LinearLayout>