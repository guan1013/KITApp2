<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kitapp.hska.de.kitapp.WriteCommentActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/comment.write.textview.name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeHolderString"/>

    <EditText
        android:id="@+id/comment.write.textview.comment"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:lines="10"
        android:maxLines="30"
        android:scrollbars="vertical"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RatingBar
            android:id="@+id/comment.write.ratingbar.evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.5"
            android:numStars="5"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonSend"/>

    </LinearLayout>


</LinearLayout>
