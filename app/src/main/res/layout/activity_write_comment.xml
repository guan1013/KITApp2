<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kitapp.hska.de.kitapp.WriteCommentActivity"
    style="@style/FontBGColor.White">


    <TextView
        android:id="@+id/comment.write.textview.name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeHolderString"
        style="@style/FontBGColor.White"/>

    <EditText
        android:id="@+id/comment.write.edittext.text"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:lines="10"
        android:maxLines="30"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        style="@style/FontBGColor.White">

        <RatingBar
            android:id="@+id/comment.write.ratingbar.rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentWriteButton"
            android:text="@string/buttonSend"
            android:layout_marginLeft="30dp"
            android:background="#91d187"
            android:textAllCaps="false"/>

    </LinearLayout>


</LinearLayout>
