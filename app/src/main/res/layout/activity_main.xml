<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewMainActivity" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mainImageViewLogo"
                android:src="@drawable/logo"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/main_activity_location_field_label"
                android:id="@+id/mainTextLocation" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:weightSum="1">

                <EditText
                    android:layout_width="295dp"
                    android:layout_height="50dp"
                    android:id="@+id/mainEditTextLocation"
                    android:layout_above="@+id/button"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="71dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mainImageButtonLocation"
                    android:layout_gravity="right"
                    android:src="@drawable/gps" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttonSuche"
                android:id="@+id/mainButtonSearch"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="118dp"
                android:layout_marginTop="50dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
